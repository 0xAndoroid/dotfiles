[user]
	name = Andrew Tretyakov
	email = 42178850+0xAndoroid@users.noreply.github.com
	signingkey = ~/.ssh/github_ed25519.pub
[credential]
	helper = osxkeychain
[core]
	editor = nvim
	hooksPath = ~/.git-hooks
	excludesfile = ~/.dotfiles/.gitignore_global
[commit]
	gpgsign = true
[gpg]
	format = ssh
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[pull]
	rebase = true
[alias]
	pushall = "!f() { git push \"$@\" && repo=$(git rev-parse --show-toplevel); if [ \"$repo\" = \"$HOME/.dotfiles\" ]; then for b in a16z homeserver; do git show-ref --verify --quiet refs/heads/$b && git push origin $b --force-with-lease 2>/dev/null; done; fi; }; f"
[init]
	defaultBranch = main
