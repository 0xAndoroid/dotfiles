{
  "rust": {
    "command": "rust-analyzer",
    "args": [],
    "extensionToLanguage": {
      ".rs": "rust"
    },
    "initializationOptions": {
      "checkOnSave": {
        "command": "clippy",
        "extraArgs": [
          "--no-deps",
          "--jobs",
          "2"
        ]
      }
    },
    "settings": {
      "rust-analyzer": {
        "diagnostics": {
          "enable": true,
          "disabled": [
            "clippy::unnecessary_cast",
            "clippy::uninlined_format_args"
          ]
        }
      }
    }
  }
}
