{
  "mcpServers": {
    "pal": {
      "type": "stdio",
      "command": "$HOME/.claude/mcp/pal-mcp-server/.pal_venv/bin/python",
      "args": [
        "#HOME/.claude/mcp/pal-mcp-server/server.py"
      ],
      "env": {
        "DEFAULT_MODEL": "gpt-5.3-codex",
        "DEFAULT_THINKING_MODE_THINKDEEP": "max",
        "OPENAI_ALLOWED_MODELS": "gpt-5.3-codex,gpt-5.2-pro",
        "GOOGLE_ALLOWED_MODELS": "gemini-3-pro-preview",
        "CONVERSATION_TIMEOUT_HOURS": "24",
        "MAX_CONVERSATION_TURNS": "40",
        "LOG_LEVEL": "INFO",
        "LOG_MAX_SIZE": "10MB",
        "DISABLED_TOOLS": "analyze,refactor,testgen,secaudit,docgen,tracer,consensus,precommit,clink,apilookup,version,debug"
      }
    },
    "perplexity": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@perplexity-ai/mcp-server"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    },
    "nanobanana": {
      "type": "stdio",
      "command": "uvx",
      "args": ["nanobanana-mcp-server@latest"],
      "env": {
        "GEMINI_API_KEY": "${GEMINI_API_KEY}"
      }
    },
    "Ref": {
      "type": "http",
      "url": "https://api.ref.tools/mcp",
      "headers": {
        "x-ref-api-key": "${REF_API_KEY}"
      }
    }
  }
}
