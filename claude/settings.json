  "enableAllProjectMcpServers": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You are a security reviewer evaluating a bash command for destructive potential. Analyze this command: $ARGUMENTS\n\nBLOCK if the command would:\n- Delete, remove, or destroy files/directories recursively or in bulk\n- Overwrite or corrupt critical system files, configs, or data\n- Cause irreversible data loss\n- Execute destructive operations via find, xargs, or loops\n- Wipe, format, or damage filesystems\n- Force push (git push --force, git push -f) that could overwrite others' work\n- Push directly to main/master branch without a PR\n- Rewrite remote history (rebase + push to shared branches)\n- Delete remote branches that others may depend on\n- gh repo delete or other destructive remote operations\n\nALLOW if the command is:\n- Read-only (cat, ls, grep, find without -delete/-exec rm)\n- Safe write operations to non-critical paths\n- Local development commands (git status, git commit, git add, npm install, etc.)\n- Precise SQL DELETE with a specific ID in WHERE clause\n- Normal git push to feature branches (non-main/master)\n- gh pr create, gh pr merge, gh issue commands\n- gh release, gh gist commands\n\nRespond with JSON: {\"decision\": \"approve\" or \"block\", \"reason\": \"brief explanation\"}",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c 'node \"$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2>/dev/null | head -1)dist/index.js\"'"
  },
  "enabledPlugins": {
    "claude-mem@thedotmack": true,
    "claude-hud@claude-hud": true,
    "ralph-wiggum@claude-plugins-official": true
  },
  "forceLoginMethod": "claudeai",
  "alwaysThinkingEnabled": true
